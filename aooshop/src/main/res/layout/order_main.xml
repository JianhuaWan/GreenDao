<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_topbyme"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@color/colorAccent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/order"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/hor_top"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/rel_topbyme"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/linear_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/state_all"
                    android:textColor="@color/color_chat_send_status"
                    android:textSize="16sp"/>

                <View
                    android:id="@+id/view_isshow1"
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/app_color"
                    android:visibility="invisible"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_unpay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/state_unpay"
                    android:textColor="@color/color_chat_send_status"
                    android:textSize="16sp"/>

                <View
                    android:id="@+id/view_isshow2"
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/app_color"
                    android:visibility="invisible"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_unsend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/state_unsend"
                    android:textColor="@color/color_chat_send_status"
                    android:textSize="16sp"/>

                <View
                    android:id="@+id/view_isshow3"
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/app_color"
                    android:visibility="invisible"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_unaccept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/state_unaccept"
                    android:textColor="@color/color_chat_send_status"
                    android:textSize="16sp"/>

                <View
                    android:id="@+id/view_isshow4"
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/app_color"
                    android:visibility="invisible"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/state_end"
                    android:textColor="@color/color_chat_send_status"
                    android:textSize="16sp"/>

                <View
                    android:id="@+id/view_isshow5"
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/app_color"
                    android:visibility="invisible"
                    />

            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/hor_top"
        android:background="@color/gray_normal"
        ></View>

    <LinearLayout
        android:id="@+id/linear_content_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"/>
</RelativeLayout>