<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_topbyme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/img_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:src="@mipmap/title"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_below="@+id/img_title"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="6dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@drawable/common_search_bg"
                android:gravity="center">

                <SearchView
                    android:id="@+id/searchView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-15dp"
                    android:layout_marginRight="-15dp"
                    android:gravity="center"
                    android:iconifiedByDefault="false"
                    android:queryHint="@string/menu_search"
                    android:scrollbarSize="8dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_kind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_topbyme"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear_spellgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/index_buy"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/Spell_group"
                    android:textSize="13sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_tryuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/index_spell"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/The_trial"
                    android:textSize="13sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_coupons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/index_ticket"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/coupons"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/rel_kind"
        android:layout_marginTop="10dp"
        android:background="@color/bg_gray"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_below="@+id/view_line">

        <View
            android:id="@+id/view_buttom"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/subscribe_item_drag_bg"/>

        <HorizontalScrollView
            android:id="@+id/hor_top"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/view_buttom"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/linear_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/p_1"
                        android:textColor="@color/color_chat_send_status"
                        android:textSize="14sp"/>

                    <View
                        android:id="@+id/view_isshow1"
                        android:layout_width="30dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/app_color"
                        android:visibility="invisible"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_unpay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/p_2"
                        android:textColor="@color/color_chat_send_status"
                        android:textSize="14sp"/>

                    <View
                        android:id="@+id/view_isshow2"
                        android:layout_width="30dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/app_color"
                        android:visibility="invisible"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_unsend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/p_3"
                        android:textColor="@color/color_chat_send_status"
                        android:textSize="14sp"/>

                    <View
                        android:id="@+id/view_isshow3"
                        android:layout_width="30dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/app_color"
                        android:visibility="invisible"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_unaccept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/p_4"
                        android:textColor="@color/color_chat_send_status"
                        android:textSize="14sp"/>

                    <View
                        android:id="@+id/view_isshow4"
                        android:layout_width="30dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/app_color"
                        android:visibility="invisible"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/p_5"
                        android:textColor="@color/color_chat_send_status"
                        android:textSize="14sp"/>

                    <View
                        android:id="@+id/view_isshow5"
                        android:layout_width="30dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/app_color"
                        android:visibility="invisible"
                        />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>


</RelativeLayout>